{
  "rootDir": "./",
  "moduleFileExtensions": [
    "js",
    "ts"
  ],
  "moduleDirectories": [
    "node_modules",
    "./src"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "testRegex": "/test/.*\\.spec\\.ts$",
  "transform": {
    ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "verbose": true
}
